<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="239.0" prefWidth="382.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.hse.cs.sayhellojavafx.HelloController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuHelpClick" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <Button fx:id="buttonHello" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#onHelloButtonClick" prefWidth="180.0" text="Поздороваться!" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets>
                    <top>10</top>
                    <left>10</left>
                    <right>10</right>
                    <bottom>10</bottom>
                </Insets>
            </BorderPane.margin>
        </Button>
    </bottom>
   <center>
      <TextField fx:id="textField" maxHeight="25.0" maxWidth="250.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
